<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--加载策略-->
        <ImageView
            android:id="@+id/strategy_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:background="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/strategy_iv1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:background="@mipmap/ic_launcher"/>

        <!--展示overrid调整图片大小-->
        <ImageView
            android:id="@+id/override_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:background="@mipmap/ic_launcher"/>

        <!--转换-->
        <ImageView
            android:id="@+id/transform_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/transform_iv1"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/transform_iv2"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/transform_iv3"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <!--gif-->
        <ImageView
            android:id="@+id/gif_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
    </LinearLayout>
</ScrollView>
